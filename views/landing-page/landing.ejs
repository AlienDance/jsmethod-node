    <script>
        let carouselImages = document.querySelectorAll('.carousel-item > img');
        let galleryImages = document.querySelectorAll('#gallery > .row > div > a > div > img');
        let galleryLinks = document.querySelectorAll('#gallery > .row > div > a');
        let paginationButtons = document.querySelectorAll('.pagination > li > a');

        const generateRandomNumber = () => Math.floor(Math.random() * 500000);

        const generateRandomImages = (imgElement, linkElement, resolution, sig) => {
            fetch(`https://source.unsplash.com/random/${resolution}/${sig}${generateRandomNumber()}`)
                .then(result => {
                    imgElement.setAttribute('src', result.url);
                    if(linkElement !== null){
                        linkElement.setAttribute('href', result.url);
                        refreshFsLightbox();
                    }
                })
                .catch(err => console.log(err));
        };

        const generateGalleryImages = () => {
            for(let i = 0; i < galleryImages.length; i++){
                generateRandomImages(galleryImages[i], galleryLinks[i], '');
            };
        };

        carouselImages.forEach(image => generateRandomImages(image, null, '1920x1080', '?sig='));
        generateGalleryImages();

        paginationButtons.forEach(btn => btn.addEventListener('click', generateGalleryImages));

        // no need for anchor(#) links anymore. empty href doesn't refresh page 
        const links = document.querySelectorAll('a');
        links.forEach((a) => {
            let href = a.getAttribute('href');
            if(href === ''){
                a.addEventListener('click', (e) => e.preventDefault());
            }
        });
    </script>

